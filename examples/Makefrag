
CC:=g++

EXAMPLES:=average capture_wav

.SECONDEXPANSION:
$(EXAMPLES): $(GEN_DIR)/examples/$$@.o $(GEN_DIR)/libadc-cape.a
	@echo 'LD	$@ $^'
	@$(CC) $(LFLAGS) -o $@ $^  -Lbin -ladc-cape

$(GEN_DIR)/examples/%.o: examples/%.cpp
	@mkdir -p $(GEN_DIR)/examples
	@echo 'G++	$<'
	@$(CC) $(CFLAGS) -o $@ $^